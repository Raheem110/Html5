    <script>
        // Tab navigation
        function openTab(tabName) {
            const tabs = document.getElementsByClassName('tab');
            const tabContents = document.getElementsByClassName('tab-content');
            
            for (let i = 0; i < tabs.length; i++) {
                tabs[i].classList.remove('active');
                tabContents[i].classList.remove('active');
            }
            
            document.getElementById(tabName).classList.add('active');
            event.currentTarget.classList.add('active');
            
            // Initialize cable chart when tab is opened
            if (tabName === 'cable') {
                updateCableChart();
            }
            
            // Load maintenance records when tab is opened
            if (tabName === 'maintenance') {
                loadMaintenanceRecords();
            }
        }
        
        // Set current date as default for maintenance
        document.getElementById('maintenance-date').valueAsDate = new Date();
        
        // Calculate next maintenance date (default 6 months)
        const nextDate = new Date();
        nextDate.setMonth(nextDate.getMonth() + 6);
        document.getElementById('next-maintenance').valueAsDate = nextDate;
        
        // Power Conversion Functions
        function convertKvaToKw() {
            const kva = parseFloat(document.getElementById('kva-kw-value').value);
            const pf = parseFloat(document.getElementById('kva-kw-pf').value);
            
            if (isNaN(kva) || isNaN(pf)) {
                alert('Please enter valid values');
                return;
            }
            
            const kw = kva * pf;
            document.getElementById('kva-kw-result').innerHTML = `${kva} KVA = ${kw.toFixed(2)} KW (PF: ${pf})`;
            document.getElementById('kva-kw-result').style.display = 'block';
        }
        
        function convertKwToKva() {
            const kw = parseFloat(document.getElementById('kw-kva-value').value);
            const pf = parseFloat(document.getElementById('kw-kva-pf').value);
            
            if (isNaN(kw) || isNaN(pf) || pf === 0) {
                alert('Please enter valid values');
                return;
            }
            
            const kva = kw / pf;
            document.getElementById('kw-kva-result').innerHTML = `${kw} KW = ${kva.toFixed(2)} KVA (PF: ${pf})`;
            document.getElementById('kw-kva-result').style.display = 'block';
        }
        
        function convertKvaToHp() {
            const kva = parseFloat(document.getElementById('kva-hp-value').value);
            const pf = parseFloat(document.getElementById('kva-hp-pf').value);
            
            if (isNaN(kva) || isNaN(pf)) {
                alert('Please enter valid values');
                return;
            }
            
            const kw = kva * pf;
            const hp = kw / 0.746;
            document.getElementById('kva-hp-result').innerHTML = `${kva} KVA = ${hp.toFixed(2)} HP (PF: ${pf})`;
            document.getElementById('kva-hp-result').style.display = 'block';
        }
        
        function convertHpToKva() {
            const hp = parseFloat(document.getElementById('hp-kva-value').value);
            const pf = parseFloat(document.getElementById('hp-kva-pf').value);
            
            if (isNaN(hp) || isNaN(pf) || pf === 0) {
                alert('Please enter valid values');
                return;
            }
            
            const kw = hp * 0.746;
            const kva = kw / pf;
            document.getElementById('hp-kva-result').innerHTML = `${hp} HP = ${kva.toFixed(2)} KVA (PF: ${pf})`;
            document.getElementById('hp-kva-result').style.display = 'block';
        }
        
        function convertAmpToKva() {
            const amps = parseFloat(document.getElementById('amp-kva-value').value);
            const voltage = parseFloat(document.getElementById('amp-kva-voltage').value);
            const phase = document.getElementById('amp-kva-phase').value;
            
            if (isNaN(amps) || isNaN(voltage) || voltage === 0) {
                alert('Please enter valid values');
                return;
            }
            
            let kva;
            if (phase === '1') {
                kva = (amps * voltage) / 1000;
            } else {
                kva = (amps * voltage * Math.sqrt(3)) / 1000;
            }
            
            document.getElementById('amp-kva-result').innerHTML = `${amps} Amps = ${kva.toFixed(2)} KVA (${phase}P, ${voltage}V)`;
            document.getElementById('amp-kva-result').style.display = 'block';
        }
        
        function convertKvaToAmp() {
            const kva = parseFloat(document.getElementById('kva-amp-value').value);
            const voltage = parseFloat(document.getElementById('kva-amp-voltage').value);
            const phase = document.getElementById('kva-amp-phase').value;
            
            if (isNaN(kva) || isNaN(voltage) || voltage === 0) {
                alert('Please enter valid values');
                return;
            }
            
            let amps;
            if (phase === '1') {
                amps = (kva * 1000) / voltage;
            } else {
                amps = (kva * 1000) / (voltage * Math.sqrt(3));
            }
            
            document.getElementById('kva-amp-result').innerHTML = `${kva} KVA = ${amps.toFixed(2)} Amps (${phase}P, ${voltage}V)`;
            document.getElementById('kva-amp-result').style.display = 'block';
        }
        
        function convertWattToAmp() {
            const watts = parseFloat(document.getElementById('watt-amp-value').value);
            const voltage = parseFloat(document.getElementById('watt-amp-voltage').value);
            const phase = document.getElementById('watt-amp-phase').value;
            const pf = parseFloat(document.getElementById('watt-amp-pf').value);
            
            if (isNaN(watts) || isNaN(voltage) || isNaN(pf) || voltage === 0 || pf === 0) {
                alert('Please enter valid values');
                return;
            }
            
            let amps;
            if (phase === '1') {
                amps = watts / (voltage * pf);
            } else {
                amps = watts / (voltage * Math.sqrt(3) * pf);
            }
            
            document.getElementById('watt-amp-result').innerHTML = `${watts} Watts = ${amps.toFixed(2)} Amps (${phase}P, ${voltage}V, PF: ${pf})`;
            document.getElementById('watt-amp-result').style.display = 'block';
        }
        
        function convertAmpToWatt() {
            const amps = parseFloat(document.getElementById('amp-watt-value').value);
            const voltage = parseFloat(document.getElementById('amp-watt-voltage').value);
            const phase = document.getElementById('amp-watt-phase').value;
            const pf = parseFloat(document.getElementById('amp-watt-pf').value);
            
            if (isNaN(amps) || isNaN(voltage) || isNaN(pf) || voltage === 0) {
                alert('Please enter valid values');
                return;
            }
            
            let watts;
            if (phase === '1') {
                watts = amps * voltage * pf;
            } else {
                watts = amps * voltage * Math.sqrt(3) * pf;
            }
            
            document.getElementById('amp-watt-result').innerHTML = `${amps} Amps = ${watts.toFixed(2)} Watts (${phase}P, ${voltage}V, PF: ${pf})`;
            document.getElementById('amp-watt-result').style.display = 'block';
        }
        
        // Cable Chart Data
        function updateCableChart() {
            const material = document.getElementById('cable-material').value;
            const tableBody = document.getElementById('cable-chart-body');
            tableBody.innerHTML = '';
            
            // Current ratings for different cable sizes (copper vs aluminum)
            const copperRatings = {
                4: 25, 6: 32, 10: 43, 16: 58, 25: 76, 
                35: 94, 50: 119, 70: 149, 95: 182, 
                120: 213, 150: 247, 185: 284, 240: 340
            };
            
            const aluminumRatings = {
                4: 20, 6: 25, 10: 34, 16: 46, 25: 60, 
                35: 75, 50: 95, 70: 119, 95: 145, 
                120: 170, 150: 197, 185: 227, 240: 272
            };
            
            const ratings = material === 'copper' ? copperRatings : aluminumRatings;
            
            for (const size in ratings) {
                const current = ratings[size];
                const power220 = (current * 220 / 1000).toFixed(1);
                const power380 = (current * 380 * Math.sqrt(3) / 1000).toFixed(1);
                
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${size}</td>
                    <td>${current}</td>
                    <td>${power220}</td>
                    <td>${power380}</td>
                `;
                tableBody.appendChild(row);
            }
        }
        
        // Maintenance Records Functions
        function saveMaintenanceRecord() {
            const type = document.getElementById('maintenance-type').value;
            const date = document.getElementById('maintenance-date').value;
            const hours = document.getElementById('running-hours').value;
            const nextDate = document.getElementById('next-maintenance').value;
            const notes = document.getElementById('maintenance-notes').value;
            
            if (!type || !date || !hours || !nextDate) {
                alert('Please fill all required fields');
                return;
            }
            
            const record = {
                id: Date.now(),
                type,
                date,
                hours,
                nextDate,
                notes
            };
            
            let records = JSON.parse(localStorage.getItem('maintenanceRecords') || '[]');
            records.push(record);
            localStorage.setItem('maintenanceRecords', JSON.stringify(records));
            
            loadMaintenanceRecords();
            document.getElementById('maintenance-form').reset();
            
            // Reset dates to defaults
            document.getElementById('maintenance-date').valueAsDate = new Date();
            const nextDefaultDate = new Date();
            nextDefaultDate.setMonth(nextDefaultDate.getMonth() + 6);
            document.getElementById('next-maintenance').valueAsDate = nextDefaultDate;
            
            alert('Record saved successfully');
        }
        
        function loadMaintenanceRecords() {
            const records = JSON.parse(localStorage.getItem('maintenanceRecords') || '[]');
            const recordsList = document.getElementById('records-list');
            recordsList.innerHTML = '';
            
            if (records.length === 0) {
                recordsList.innerHTML = '<p>No maintenance records found</p>';
                return;
            }
            
            // Sort records by date (newest first)
            records.sort((a, b) => new Date(b.date) - new Date(a.date));
            
            records.forEach(record => {
                const typeNames = {
                    'oil': 'Oil Change',
                    'oil-filter': 'Oil Filter Change',
                    'air-filter': 'Air Filter Change',
                    'diesel-filter': 'Diesel Filter Change',
                    'other': 'Other Maintenance'
                };
                
                const recordElement = document.createElement('div');
                recordElement.className = 'record-item';
                recordElement.innerHTML = `
                    <h3>${typeNames[record.type]} - ${record.date}</h3>
                    <p><strong>Running Hours:</strong> ${record.hours}</p>
                    <p><strong>Next Maintenance:</strong> ${record.nextDate}</p>
                    ${record.notes ? `<p><strong>Notes:</strong> ${record.notes}</p>` : ''}
                    <button class="delete-btn" onclick="deleteRecord(${record.id})">Delete</button>
                `;
                recordsList.appendChild(recordElement);
            });
        }
        
        function deleteRecord(id) {
            if (!confirm('Are you sure you want to delete this record?')) {
                return;
            }
            
            let records = JSON.parse(localStorage.getItem('maintenanceRecords') || '[]');
            records = records.filter(record => record.id !== id);
            localStorage.setItem('maintenanceRecords', JSON.stringify(records));
            
            loadMaintenanceRecords();
        }
        
        // Load Calculator Functions
        function calculateTotalLoad() {
            // AC (1 ton ≈ 1200W)
            const acTons = parseFloat(document.getElementById('ac-ton').value);
            const acQty = parseInt(document.getElementById('ac-qty').value) || 0;
            const acWatts = acTons * 1200 * acQty;
            
            // Bulbs
            const bulbWatt = parseInt(document.getElementById('bulb-watt').value);
            const bulbQty = parseInt(document.getElementById('bulb-qty').value) || 0;
            const bulbWatts = bulbWatt * bulbQty;
            
            // Fans
            const fanWatt = parseInt(document.getElementById('fan-watt').value);
            const fanQty = parseInt(document.getElementById('fan-qty').value) || 0;
            const fanWatts = fanWatt * fanQty;
            
            // Water Pump (1 HP = 746W)
            const pumpHp = parseFloat(document.getElementById('pump-hp').value);
            const pumpQty = parseInt(document.getElementById('pump-qty').value) || 0;
            const pumpWatts = pumpHp * 746 * pumpQty;
            
            // Refrigerator
            const fridgeWatt = parseInt(document.getElementById('fridge-watt').value);
            const fridgeQty = parseInt(document.getElementById('fridge-qty').value) || 0;
            const fridgeWatts = fridgeWatt * fridgeQty;
            
            // TV
            const tvWatt = parseInt(document.getElementById('tv-watt').value);
            const tvQty = parseInt(document.getElementById('tv-qty').value) || 0;
            const tvWatts = tvWatt * tvQty;
            
            // Washing Machine
            const washerWatt = parseInt(document.getElementById('washer-watt').value);
            const washerQty = parseInt(document.getElementById('washer-qty').value) || 0;
            const washerWatts = washerWatt * washerQty;
            
            // Other Appliances
            const otherWatt = parseInt(document.getElementById('other-watt').value) || 0;
            const otherQty = parseInt(document.getElementById('other-qty').value) || 0;
            const otherWatts = otherWatt * otherQty;
            
            // Total Watts
            const totalWatts = acWatts + bulbWatts + fanWatts + pumpWatts + fridgeWatts + tvWatts + washerWatts + otherWatts;
            
            // Voltage and Power Factor
            const voltage = parseFloat(document.getElementById('voltage').value);
            const pf = parseFloat(document.getElementById('power-factor').value);
            
            // Calculate other values
            const totalAmps = totalWatts / (voltage * pf);
            const totalKva = totalWatts / (1000 * pf);
            const totalKw = totalWatts / 1000;
            
            // Display results
            document.getElementById('total-watts').textContent = totalWatts.toFixed(2);
            document.getElementById('total-amps').textContent = totalAmps.toFixed(2);
            document.getElementById('total-kva').textContent = totalKva.toFixed(2);
            document.getElementById('total-kw').textContent = totalKw.toFixed(2);
        }
        
        // Initialize the app
        window.onload = function() {
            updateCableChart();
        };
    </script>
</body>
</html>
